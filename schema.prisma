// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Article {
  id        String   @id @default(uuid()) @db.Uuid
  title     String
  excerpt   String
  content   String   @db.Text
  createdAt DateTime @default(now()) @map(name: "created_at")

  @@map(name: "articles")
}
